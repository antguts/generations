        %rect{height: "4", width: "25", x: "2", y: "5"}
        %rect{height: "4", width: "25", x: "2", y: "13"}
        %rect{height: "4", width: "25", x: "2", y: "21"}

  .utility
    %ul
      = nav_to 'Home', root_path, class: "nav-link"
      = nav_to 'About', about_path, class: "nav-link"
      = nav_to 'Stylists', stylists_path, class: "nav-link"
