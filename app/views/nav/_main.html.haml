    .container
      %ul#nav
        = nav_to 'Home', root_path
        = nav_to 'About', about_path
        = nav_to 'Stylists', stylists_path
        = nav_to 'Products', products_path
        = nav_to 'Gallery', gallery_path
        = nav_to 'Services', services_path
        = nav_to 'Contact', contact_path
        = nav_to 'F.A.Q', contact_path

      .nav-box-2= render 'shared/social_links'
